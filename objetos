class Pessoa{

    nome;
    idade;

        constructor(nome, idade){
            this.nome = nome;
            this.idade = idade;
            this.ano = 2023 - idade;
        }
    descrever(){
        
       console.log(`Meu nome é ${this.nome} e minha idade é ${this.idade}`);  

    }

}

const anderson = new Pessoa('Anderson',23);

const david = new Pessoa('David',14);
console.log(anderson)
console.log(david)
